<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cys.MainActivity">

    <Button
        android:id="@+id/id_bt_start_scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开始扫描"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/id_bt_stop_scan"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_bt_stop_scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="停止扫描"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toRightOf="@+id/id_bt_start_scan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_bt_disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="断开连接"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_bt_start_scan" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_rcv_device"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_bt_disconnect">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>